<body>

  <h1>Sign Up Confirmation</h1>
  <h3>Are you sure these values are correct?</h3>
  <div class="row">
    <div class="col-md-4">
      <p>Email: <%= @user.email %></p>
      <p>Name: <%= @user.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p><%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %></p>
      <p><%= button_to "No", {controller: "users", action: "new" }, class: 'btn btn-failure', :method => :get %></p>
    </div>
  </div>

</body>

</html>
